{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    
    // TODO: Configure JSX compilation
    // Cấu hình JSX để sử dụng factory functions của chúng ta
    "jsx": "react", // "react" sử dụng transform cổ điển
    "jsxFactory": "createElement",
    "jsxFragmentFactory": "createFragment",

    "allowJs": true,
    "outDir": "./dist",
    // "rootDir": "./src", // <-- XÓA HOẶC CHÚ THÍCH DÒNG NÀY
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*", "vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}